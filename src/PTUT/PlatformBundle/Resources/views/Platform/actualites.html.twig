{% extends "PTUTPlatformBundle:Platform:layout.html.twig" %}

{% block include %}
    <style>
        .pagination {
            display: inline-block;
        }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
            border-radius: 5px;
        }

        .pagination a.active {
            border-radius: 5px;
            background-color: #4CAF50;
            color: white;
        }

        .pagination a:hover:not(.active) {background-color: #ddd;}
    </style>

{%endblock%}

{% block ongletEditions %}active{%endblock%}

{% block body %} 
    <section class="container">
        <div class="col-sm-10">
            <fieldset>
                <legend><h1>Articles</h1></legend>
                    {% for i in 0..1 %}
                        {% if i <= taille-1 %}
                            
                                <div class="portfolio-item">
                                    <div class="item-inner well well-sm col-sm-11">
                                        <div>
                                            <h3> {{ articles[i+(id-1)*2].titre }} </h3>
                                            <p> {{ articles[i+(id-1)*2].presentation }}</p>
                                            {% set page = i+(id-1)*2+1 %}
                                        </div>
                                        <div class="overlay"><a class="preview btn btn-danger" href="{{path('ptut_platform_article', {'id': page })}}"><i class="icon-eye-open"></i></a></div>
                                    </div>
                                </div>
                            
                        {% endif %}

                    {% endfor %}
                    <div class="btn-group col-sm-12">
                    {% if taille/2 >= 2 %}

                            {% if id > 1 %}
                                {% set prev = id - 1 %}
                                <a class="btn btn-danger" href="{{path('ptut_platform_view_id', {'id': prev })}}" data-slide="next"><i class="icon-angle-left"></i></a>
                            {% else %}
                                <a class="btn btn-danger" href="" data-slide="next"><i class="icon-angle-left"></i></a>
                            {% endif %}
                            <p class="btn btn-danger">{{id}}</p>
                            {% if id < taille//2+1 %}
                                {% set next = id + 1 %}
                                <a class="btn btn-danger" href="{{path('ptut_platform_view_id', {'id': next })}}" data-slide="next"><i class="icon-angle-right"></i></a>
                            {% else %}
                                <a class="btn btn-danger" href="" data-slide="next"><i class="icon-angle-right"></i></a>
                            {% endif %}
                    {% elseif taille/2 >= 4%}
                            <a class="btn btn-danger" href="#scroller" data-slide="prev"><i class="icon-angle-left"></i></a>
                            <a class="btn btn-danger" href="#scroller" data-slide="next"><i class="icon-angle-right"></i></a>
                    {% endif %}
                </div>
                <center>
                <div class="pagination">
                  <a href="#">&laquo;</a>
                  <a href="#">1</a>
                  <a href="#" class="active">2</a>
                  <a href="#">3</a>
                  <a href="#">4</a>
                  <a href="#">5</a>
                  <a href="#">6</a>
                  <a href="#">&raquo;</a>
                </div>
                </center>
            </fieldset>
        </div>
    </section>
{%endblock%}